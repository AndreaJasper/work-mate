<div class="w-25 mx-auto text-center mt-3">
    <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-signin">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <%= f.text_field :username, placeholder:"Username", "aria-label": "Username", class: "form-control" %>
            <%= f.password_field :password, placeholder: "Password", "aria-label": "Password", class: "form-control" %>
            <%= f.submit "Log in", "aria-label": "Log in", class: "btn btn-lg btn-primary btn-block mt-3" %>

            <p class="mt-5 mb-3 text-muted">New user? <%= link_to "Signup", "signup", "aria-label": "Sign up" %></p>
        </div>
    <% end %>
</div>